<framework>
	<execution>
		<maxThreadCount> 1 </maxThreadCount>
		<clock enabled="true" unit="hz">100</clock>
		<configMonitor>true</configMonitor>
	</execution>
	<modulesToEnable>
		<module>ogre_window_manager</module>
		<module>graphics_test</module>
		<module>image_renderer</module>
		<module>graphics_test_2</module>
		<module>image_renderer_2</module>
	</modulesToEnable>
	
	<module>
		<name>ogre_window_manager</name>
		<config src="visualmanager.lconf" />
	</module>
	
	<module>
		<name>image_renderer</name>
		<channelMapping from="IMAGE" to="GRAPHICS_IMAGE" />
		<config>
			<window>GraphicsTest</window>
		</config>
	</module>
	
	<module>
		<name>graphics_test</name>
		<channelMapping from="IMAGE" to="GRAPHICS_IMAGE" />
		<config>
			<width>1000</width>
			<height>1000</height>
		</config>
	</module>
	
	<module>
		<name>image_renderer_2</name>
		<libpath>image_renderer</libpath>
		<libname>image_renderer</libname>
		<channelMapping from="IMAGE" to="GRAPHICS_IMAGE_2" />
		<config>
			<window>GraphicsTest_2</window>
		</config>
	</module>
	
	<module>
		<name>graphics_test_2</name>
		<libpath>graphics_test</libpath>
		<libname>graphics_test</libname>
		<channelMapping from="IMAGE" to="GRAPHICS_IMAGE_2" />
		<config>
			<width>200</width>
			<height>200</height>
		</config>
	</module>
</framework>
